#!/usr/bin/env python3
import sys
import os
from compiler import compile_to_bytecode

def main():
    if len(sys.argv) < 2:
        print("Usage: kethakac <source_file.snl>")
        sys.exit(1)
        
    source_file = sys.argv[1]
    if not source_file.endswith('.snl'):
        print("Error: Source file must have .snl extension")
        sys.exit(1)
        
    try:
        output_file = os.path.splitext(source_file)[0] + '.kbc'
        compile_to_bytecode(source_file, output_file)
        print(f"Compilation successful: {output_file}")
        
    except Exception as e:
        print(f"Compilation error: {str(e)}")
        sys.exit(1)

if __name__ == "__main__":
    main()
